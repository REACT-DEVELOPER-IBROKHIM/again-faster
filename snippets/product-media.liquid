{% case media.media_type %}
  {% when "image" %}
    <img src="{{ media | img_url: 'master' }}" class="media_item" alt="{{ media.preview_image.alt }}">

  {% when 'external_video' %}
    {{ media | external_video_tag: class: "media_item" }}

  {% when 'video' %}
    {{ media | video_tag: controls: true, class: "media_item" }}

  {% when 'model' %}
    {{ media | model_view_tag }}
  {% else %}
    
{% endcase %}